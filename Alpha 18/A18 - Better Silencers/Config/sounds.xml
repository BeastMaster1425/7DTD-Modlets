<?xml version="1.0" encoding="UTF-8"?>
<configs>
	<!-- Set values to 1 to make the silenced gun practically silent to zombies -->
	<!-- Based on vanilla data the formula seems to be that silencing a gun cuts sound to 1/3 -->
	<!-- I think the pistol needs a little extra love -->
	<!-- defaults:
			ak47_s_fire: 36
			hunting_rifle_s_fire: 36
			pump_shotgun_s_fire: 27
			pistol_s_fire: 17
			mp5_s_fire: 18
			sniperrifle_s_fire: 36
	-->
	<set xpath="/Sounds/SoundDataNode[@name='ak47_s_fire']/Noise/@noise">12</set>
	<set xpath="/Sounds/SoundDataNode[@name='hunting_rifle_s_fire']/Noise/@noise">12</set>
	<set xpath="/Sounds/SoundDataNode[@name='pump_shotgun_s_fire']/Noise/@noise">9</set>
	<set xpath="/Sounds/SoundDataNode[@name='pistol_s_fire']/Noise/@noise">1</set>
	<set xpath="/Sounds/SoundDataNode[@name='mp5_s_fire']/Noise/@noise">6</set>
	<set xpath="/Sounds/SoundDataNode[@name='sniperrifle_s_fire']/Noise/@noise">6</set>
	<set xpath="/Sounds/SoundDataNode[@name='m60_s_fire']/Noise/@noise">6</set>
</configs>