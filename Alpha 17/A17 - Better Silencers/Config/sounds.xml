<?xml version="1.0" encoding="UTF-8"?>
<configs>
	<!-- Set values to 1 to make the silenced gun practically silent to zombies -->
	<!-- Based on vanilla data the formula seems to be that silencing a gun cuts sound to 1/3 or 1/4 of original -->
	<!-- I think the pistol needs a little extra love -->
	<set xpath="/Sounds/SoundDataNode[@name='ak47_s_fire']/Noise/@range">15</set>
	<set xpath="/Sounds/SoundDataNode[@name='ak47_s_fire']/Noise/@volume">38</set>
	
	<set xpath="/Sounds/SoundDataNode[@name='hunting_rifle_s_fire']/Noise/@range">15</set>
	<set xpath="/Sounds/SoundDataNode[@name='hunting_rifle_s_fire']/Noise/@volume">45</set>
	
	<set xpath="/Sounds/SoundDataNode[@name='pump_shotgun_s_fire']/Noise/@range">15</set>
	<set xpath="/Sounds/SoundDataNode[@name='pump_shotgun_s_fire']/Noise/@volume">50</set>
	
	<set xpath="/Sounds/SoundDataNode[@name='pistol_s_fire']/Noise/@range">1</set>
	<set xpath="/Sounds/SoundDataNode[@name='pistol_s_fire']/Noise/@volume">1</set>
	
	<set xpath="/Sounds/SoundDataNode[@name='mp5_s_fire']/Noise/@range">2</set>
	<set xpath="/Sounds/SoundDataNode[@name='mp5_s_fire']/Noise/@volume">18</set>
</configs>